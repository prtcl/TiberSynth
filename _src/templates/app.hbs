<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">

    <title>Tibersynth v1.0</title>
    <meta name="description" content="Experimental audio synthesizer that runs in your web browser" />
    <meta name="author" content="Cory O'Brien">
    <link rel="canonical" href="http://tibersynth.prtcl.cc" />

    <meta property="og:title" content="TiberSynth v1.0"/>
    <meta property="og:description" content="Experimental audio synthesizer that runs in your web browser"/>
    <meta property="og:url" content="http://tibersynth.prtcl.cc"/>
    <meta property="og:image" content="http://tibersynth.prtcl.cc/static/img/tibersynth-screenshot-01.png" />

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-47948701-3', 'auto');
      ga('send', 'pageview');
    </script>

    <meta name="viewport" content="width=device-width, height=devince-height, initial-scale=1, user-scalable=0">
    {{#each cssFiles}}
    <link rel="stylesheet" href="{{.}}">
    {{/each}}

    {{#each scripts}}
    <script src="{{.}}"></script>
    {{/each}}

    {{#if prod}}
    <script>
        require.config({
            baseUrl: '/static/app'
        });
    </script>
    {{else}}
    <script>
        require.config({
            baseUrl: '/static/app',
            paths: { 'text': '../lib/text' }
        });
    </script>
    {{/if}}

    <script>
        require(['app'], function (app) {
            window.tibersynth = app;
            app.run();
        });
    </script>

</head>
<body>
<div id="container">
    <div id="tibersynth">
        <div id="sidebar" class="fade-in">
            <div class="header">
                <h1>TiberSynth v1.0</h1>
            </div>
        </div>
        <div id="keyboard-legend" class="fade-in keyboard-legend">
            <ul class="legend">
                <li class="item">Regenerate: <strong>R</strong></li>
                <li class="item">Back/Undo: <strong>Z</strong></li>
                <li class="item">Next/Redo: <strong>Y</strong></li>
                <li class="item">Play: <strong>Mouse</strong></li>
            </ul>
        </div>
        <div id="playing-surface" class="playing-surface"></div>
        <div id="controls" class="fade-in control-bar"></div>
    </div>
    <div id="modal-container"></div>
</div>
</body>
</html>